import random

# List of predefined words
words = ["apple", "house", "tiger", "plant", "river"]

# Randomly choose one word
chosen_word = random.choice(words)

# Track the guessed letters
guessed_letters = []
tries = 6  # Limit for incorrect guesses

# Display the word with underscores for unguessed letters
def display_word(word, guessed):
    return ' '.join([letter if letter in guessed else "_" for letter in word])

# Game loop
while tries > 0:
    print("\nWord:", display_word(chosen_word, guessed_letters))
    guess = input("Guess a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("Please enter a single alphabet.")
        continue

    if guess in guessed_letters:
        print("You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in chosen_word:
        print("Correct!")
        if all(letter in guessed_letters for letter in chosen_word):
            print("\nCongratulations! You guessed the word:", chosen_word)
            break
    else:
        tries -= 1
        print(f"Wrong! You have {tries} guesses left.")

else:
    print("\nGame Over! The word was:", chosen_word)
